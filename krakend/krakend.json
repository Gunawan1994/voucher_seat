{
  "version": 3,
  "name": "voucher-api",
  "endpoints": [
    {
      "endpoint": "/api/check",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/check",
          "host": ["http://backend:8888"]
        }
      ]
    },
    {
      "endpoint": "/api/generate",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/generate",
          "host": ["http://backend:8888"]
        }
      ]
    }
  ],
    "extra_config": {
    "security/cors": {
      "allow_origins": ["http://localhost:3000", "https://your-react-app-domain.com"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allow_headers": ["Content-Type"],
      "expose_headers": [],
      "allow_credentials": false,
      "max_age": "12h"
    }
  }
}
